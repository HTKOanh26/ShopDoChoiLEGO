@model ShopDoChoiLEGO.Models.KhuyenMai

@{
    ViewBag.Title = "Tạo mới khuyến mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.TenKhuyenMai, "Tên khuyến mãi", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td class="input-cell">@Html.EditorFor(model => model.TenKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.MoTa, "Mô tả", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td class="input-cell">@Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td><strong>@Html.Label("Ngày bắt đầu", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td><input type="date" id="NgayBatDau" name="NgayBatDau" class="form-control" /></td>
                </tr>
                <tr>
                    <td><strong>@Html.Label("Ngày kết thúc", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td><input type="date" id="NgayKetThuc" name="NgayKetThuc" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.GiamGia, "Giảm giá", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td class="input-cell">@Html.EditorFor(model => model.GiamGia, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                @if (!ViewData.ModelState.IsValid)
                {
                    <tr>
                        <td colspan="2" style="text-align: center; color: red;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4" style="text-align: center;">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus"></i> Tạo mới
                        </button>
                        <a href="@Url.Action("TrangChu")" class="btn btn-default">
                            <i class="bi bi-chevron-left"></i> Quay lại
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script>
    function previewFile(event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var preview = document.getElementById('previewImage');
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
    </script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery UI -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- Khởi tạo DatePicker -->
    <script>
    $(function () {
        $("#NgayThemVao").datepicker();
    });
    </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          integrity="sha512-HVav79c4rr0mCAl7ikAsBZEKjh3r+5VfheM0YG4IC5cEfr5W9l4HNiWcBg0rhK4f1m5WZVZ3vSQS61e/1pG9eg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
}