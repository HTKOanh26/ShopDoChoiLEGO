@model ShopDoChoiLEGO.Models.KhuyenMai

@{
    ViewBag.Title = "Chỉnh sửa khuyến mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    @Html.HiddenFor(model => model.MaKhuyenMai)
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.TenKhuyenMai, "Tên khuyến mãi", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>@Html.EditorFor(model => model.TenKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    @Html.HiddenFor(model => model.MoTa)
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.TenKhuyenMai, "Mô tả", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>@Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td><strong>@Html.LabelFor(model => model.NgayBatDau, "Ngày bắt đầu", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>@Html.TextBoxFor(model => model.NgayBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })</td>
                </tr>
                <tr>
                    <td><strong>@Html.LabelFor(model => model.NgayKetThuc, "Ngày kết thúc", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>@Html.TextBoxFor(model => model.NgayKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })</td>
                </tr>

                <tr>
                    @Html.HiddenFor(model => model.GiamGia)
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.GiamGia, "Giảm giá", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>@Html.EditorFor(model => model.GiamGia, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td colspan="4" style="text-align: center;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Cập nhật
                        </button>

                        <a href="@Url.Action("TrangChu")" class="btn btn-default">
                            <i class="bi bi-chevron-left"></i> Quay lại
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>



}
