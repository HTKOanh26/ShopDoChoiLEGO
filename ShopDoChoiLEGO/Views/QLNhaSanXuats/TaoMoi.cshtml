@model ShopDoChoiLEGO.Models.NhaSanXuat

@{
    ViewBag.Title = "Tạo mới nhà sản xuất";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.TenNhaSanXuat, "Tên nhà sản xuất", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td class="input-cell">@Html.EditorFor(model => model.TenNhaSanXuat, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.QuocGia, "Quốc gia", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td class="input-cell">
                        <select class="form-control" id="QuocGia" name="QuocGia">
                            <option value="">Chọn quốc gia</option>
                            <option value="Việt Nam">Việt Nam</option>
                            <option value="Mỹ">Mỹ</option>
                            <option value="Anh">Anh</option>
                            <option value="Pháp">Pháp</option>
                            <option value="Đức">Đức</option>
                            <option value="Hà Lan">Hà Lan</option>
                            <option value="Nhật Bản">Nhật Bản</option>
                            <option value="Hàn Quốc">Hàn Quốc</option>
                            <option value="Nga">Nga</option>
                            <option value="Trung Quốc">Trung Quốc</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.DiaChi, "Địa chỉ", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td class="input-cell">@Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>

                @if (!ViewData.ModelState.IsValid)
                {
                    <tr>
                        <td colspan="2" style="text-align: center; color: red;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus"></i> Tạo mới
                        </button>
                        <a href="@Url.Action("TrangChu")" class="btn btn-default">
                            <i class="bi bi-chevron-left"></i> Quay lại
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">


<style>
    .btn-default {
        background-color: #f8f9fa;
        color: #212529;
    }
</style>
