@model ShopDoChoiLEGO.Models.DoiMatKhau

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng nhập</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @using (Html.BeginForm("DoiMatKhau", "DangNhaps", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="panel-body">
                                <div class="text-center">
                                    <h3><i class="fa fa-user-secret fa-4x"></i></h3> 
                                    <h2 class="text-center">Đổi mật khẩu</h2>
                                    <p>Bạn có thể đổi mật khẩu tại đây</p>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-lock color-blue"></i></span>
                                                <input id="matkhaucu" name="matkhaucu" placeholder="Nhập mật khẩu cũ" class="form-control" type="password">
                                           
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-lock color-blue"></i></span>
                                                <input id="matkhaumoi" name="matkhaumoi" placeholder="Nhập mật khẩu mới" class="form-control" type="password">
                                                
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-lock color-blue"></i></span>
                                                <input id="xacnhanmatkhau" name="xacnhanmatkhau" placeholder="Xác nhận mật khẩu" class="form-control" type="password">
                                  
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-block">Đổi mật khẩu</button>
                                        @if (!string.IsNullOrEmpty(ViewBag.ThongBao))
                                        {
                                            <p class="text-danger mt-3">@ViewBag.ThongBao</p>
                                        }
                                        <p class="mt-3">Bạn chưa có tài khoản? <a href="https://localhost:44391/DangNhaps/DangKy">Đăng ký ở đây</a></p>
                                        <p class="mt-3">Bạn quên mật khẩu? <a href="https://localhost:44391/DangNhaps/QuenMatKhau">Lấy lại mật khẩu ở đây</a></p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
