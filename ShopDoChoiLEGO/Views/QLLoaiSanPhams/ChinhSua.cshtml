@model ShopDoChoiLEGO.Models.LoaiSanPham

@{
    ViewBag.Title = "Chỉnh sửa danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">
    <table class="table table-bordered">
        <tbody>
            <tr>
                @Html.HiddenFor(model => model.MaLoaiSanPham)
                <td class="label-cell"><strong>@Html.LabelFor(model => model.TenLoaiSanPham, "Tên loại sản phẩm", htmlAttributes: new { @class = "control-label" })</strong></td>
                <td>@Html.EditorFor(model => model.TenLoaiSanPham, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center;">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Cập nhật
                    </button>
                    <a href="@Url.Action("TrangChu")" class="btn btn-default">
                        <i class="bi bi-chevron-left"></i> Quay lại
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
