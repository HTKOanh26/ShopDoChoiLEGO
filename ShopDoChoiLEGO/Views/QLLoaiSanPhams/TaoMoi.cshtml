@model ShopDoChoiLEGO.Models.LoaiSanPham

@{
    ViewBag.Title = "Tạo mới danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.TenLoaiSanPham, "Tên loại sản phẩm", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td class="input-cell">@Html.EditorFor(model => model.TenLoaiSanPham, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                @if (!ViewData.ModelState.IsValid)
                {
                    <tr>
                        <td colspan="2" style="text-align: center; color: red;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus"></i> Tạo mới
                        </button>
                        <a href="@Url.Action("TrangChu")" class="btn btn-default">
                            <i class="bi bi-chevron-left"></i> Quay lại
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .btn-default {
        background-color: #f8f9fa;
        color: #212529;
    }
</style>
