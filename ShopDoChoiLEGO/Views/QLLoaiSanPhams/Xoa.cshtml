@model ShopDoChoiLEGO.Models.LoaiSanPham

@{
    ViewBag.Title = "Xóa danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">
    <table class="table table-bordered">
        <tbody>
            <tr>
                @Html.HiddenFor(model => model.MaLoaiSanPham)
                <td><strong>@Html.LabelFor(model => model.MaLoaiSanPham, "Mã loại sản phẩm")</strong></td>
                <td>@Html.DisplayFor(model => model.MaLoaiSanPham)</td>
            </tr>
            <tr>
                <td><strong>@Html.LabelFor(model => model.TenLoaiSanPham, "Tên Loại Sản Phẩm")</strong></td>
                <td>@Html.DisplayFor(model => model.TenLoaiSanPham)</td>
            </tr>

        </tbody>

    </table>
    <!-- Thêm modal xác nhận xóa -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa sản phẩm này?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">Xóa</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Thêm mã JavaScript -->
    <script>
        $(document).ready(function () {
            $('#confirmDeleteBtn').click(function () {
                // Thực hiện hành động xóa khi người dùng xác nhận
                $('form').submit();
            });
        });
    </script>

    <!-- Thêm nút để mở modal xác nhận xóa -->
    <div class="text-center">
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal">
            <i class="bi bi-trash"></i> Xóa
        </button>
        <a href="@Url.Action("TrangChu")" class="btn btn-default">
            <i class="bi bi-chevron-left"></i> Quay lại
        </a>
    </div>
</div>
}
