@model IEnumerable<ShopDoChoiLEGO.Models.DanhGia>

@{
    ViewBag.Title = "Trang chủ đánh giá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<div class="container-fluid">
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="successModalLabel">Thông báo</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @ViewBag.SuccessMessage
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tiếp tục</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- JavaScript để hiển thị modal tự động khi trang tải -->
        <script>
            $(document).ready(function () {
                $('#successModal').modal('show');
            });
        </script>
    }
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Đánh giá</h1>
        <a href="@Url.Action("TaoMoi", "QLDanhGias")" class="d-none d-sm-inline-block btn btn-sm btn-primary btn-custom shadow-sm">
            <i class="fas fa-plus fa-sm"></i>
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng dữ liệu</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="example" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="no-wrap">Mã đánh giá</th>
                            <th class="no-wrap">Tên đăng nhập</th>
                            <th class="no-wrap">Tên sản phẩm</th>
                            <th class="no-wrap">Điểm đánh giá</th>
                            <th class="no-wrap">Nội dung đánh giá</th>
                            <th class="no-wrap">Ngày đánh giá</th>
                            <th class="no-wrap">Chức năng</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MaDanhGia)</td>
                                <td>@Html.DisplayFor(modelItem => item.NguoiDung.TenDangNhap)</td>
                                <td>@Html.DisplayFor(modelItem => item.SanPham.TenSanPham)</td>
                                <td>@Html.DisplayFor(modelItem => item.DiemDanhGia)</td>
                                <td>@Html.DisplayFor(modelItem => item.NoiDungDanhGia)</td>
                                <td>@Html.DisplayFor(modelItem => item.NgayDanhGia)</td>
                                <td class="table-cell">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("ChinhSua", new { id = item.MaDanhGia})" class="btn btn-sm btn-warning btn-custom shadow-sm">
                                            <i class="fas fa-edit fa-sm"></i>
                                        </a>
                                        <a href="@Url.Action("Xoa", new { id = item.MaDanhGia})" class="btn btn-sm btn-danger btn-custom shadow-sm">
                                            <i class="fas fa-trash fa-sm"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
