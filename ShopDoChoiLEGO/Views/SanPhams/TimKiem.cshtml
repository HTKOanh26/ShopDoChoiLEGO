
@{
    ViewBag.Title = "Tìm kiếm";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}
@model List<ShopDoChoiLEGO.Models.SanPham>

<h2>Tìm kiếm</h2>

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var sanpham in Model)
        {


            <div class="col-md-4 mb-4">
                <a href="@Url.Action("ChiTietSanPham", "SanPhams", new { MaSanPham = sanpham.MaSanPham })" class="card-link">
                    <div class="card h-100">
                        <img src="~/Public/image/@sanpham.URLHinhAnh" class="card-img-top" alt="@sanpham.TenSanPham" style="max-height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@sanpham.TenSanPham</h5>
                            <p class="card-text">Giá: $@sanpham.Gia</p>
                            <p class="card-text">Trạng thái: @sanpham.TrangThai</p>
                        </div>
                    </div>
                </a>
            </div>

        }
    </div>
}
else
{
    <p>Không có sản phẩm.</p>
}

