@model ShopDoChoiLEGO.Models.TaiKhoan

@{
    ViewBag.Title = "Tạo mới tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td><strong>@Html.LabelFor(model => model.MaNguoiDung, "Mã người dùng", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>@Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.LoaiTaiKhoan, "Loại tài khoản", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>
                        <select id="LoaiTaiKhoan" name="LoaiTaiKhoan" class="form-control">
                            <option value="Quản trị viên">Quản trị viên</option>
                            <option value="Khách hàng">Khách hàng</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><strong>@Html.Label("Ngày tạo", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td><input type="date" id="NgayTao" name="NgayTao" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.TrangThaiTaiKhoan, "Trạng thái tài khoản", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>
                        <select id="TrangThaiTaiKhoan" name="TrangThaiTaiKhoan" class="form-control">
                            <option value="Đã kích hoạt">Đã kích hoạt</option>
                            <option value="Chưa kích hoạt">Chưa kích hoạt</option>
                        </select>
                    </td>
                </tr>
                @if (!ViewData.ModelState.IsValid)
                {
                    <tr>
                        <td colspan="2" style="text-align: center; color: red;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4" style="text-align: center;">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus"></i> Tạo mới
                        </button>
                        <a href="@Url.Action("TrangChu")" class="btn btn-default">
                            <i class="bi bi-chevron-left"></i> Quay lại
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>




}