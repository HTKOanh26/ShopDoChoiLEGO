@model ShopDoChoiLEGO.Models.DonHang

@{
    ViewBag.Title = "Tạo mới đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td><strong>@Html.LabelFor(model => model.MaNguoiDung, "Mã người dùng", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>@Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control" })</td>
                </tr>
                @*<tr>
                    <td><strong>@Html.LabelFor(model => model.MaSanPham, "Mã sản phẩm", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>@Html.EditorFor("MaSanPham", null, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>*@
                <tr>
                    <td><strong>@Html.Label("Ngày đặt hàng", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td><input type="date" id="NgayDatHang" name="NgayDatHang" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.TrangThaiDonHang, "Trạng thái đơn hàng", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td>
                        <select id="TrangThaiDonHang" name="TrangThaiDonHang" class="form-control">
                            <option value="Đang giao hàng">Đang giao hàng</option>
                            <option value="Đang chuẩn bị">Đang chuẩn bị</option>
                            <option value="Đơn hàng đã hủy">Đơn hàng đã hủy</option>

                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="label-cell"><strong>@Html.LabelFor(model => model.TongTien, "Tổng tiền", htmlAttributes: new { @class = "control-label" })</strong></td>
                    <td class="input-cell">@Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                @if (!ViewData.ModelState.IsValid)
                {
                    <tr>
                        <td colspan="2" style="text-align: center; color: red;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4" style="text-align: center;">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus"></i> Tạo mới
                        </button>
                        <a href="@Url.Action("TrangChu")" class="btn btn-default">
                            <i class="bi bi-chevron-left"></i> Quay lại
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
<!-- Khởi tạo DatePicker -->
<script>
    $(function () {
        $("#NgayDatHang").datepicker();
    });
</script>

